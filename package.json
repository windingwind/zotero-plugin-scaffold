{
  "name": "zotero-plugin-scaffold",
  "version": "0.0.31",
  "description": "A scaffold for Zotero plugin development.",
  "scripts": {
    "dev": "unbuild --stub",
    "build": "tsc --noEmit && unbuild",
    "lint": "eslint . & prettier --check .",
    "lint:fix": "eslint --fix . & prettier --write .",
    "release": "bumpp --commit \"chore(release): publish v%s\"",
    "update:deps": "pnpx taze minor -w -f -l",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs"
    }
  },
  "main": "./dist/index.mjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "bin": {
    "zotero-plugin": "./dist/cli.mjs"
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "zotero",
    "plugin",
    "developer",
    "scaffold",
    "web-ext"
  ],
  "author": "northword",
  "license": "AGPL-3.0-or-later",
  "repository": {
    "type": "git",
    "url": "https://github.com/northword/zotero-plugin-scaffold.git"
  },
  "bugs": {
    "url": "https://github.com/northword/zotero-plugin-scaffold/issues"
  },
  "homepage": "https://github.com/northword/zotero-plugin-scaffold#readme",
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org"
  },
  "directories": {
    "lib": "dist",
    "doc": "docs"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "pnpm@9.4.0",
  "dependencies": {
    "@inquirer/prompts": "5.0.5",
    "bumpp": "9.4.1",
    "c12": "1.11.1",
    "chalk": "5.3.0",
    "chokidar": "3.6.0",
    "commander": "12.1.0",
    "consola": "3.2.3",
    "conventional-changelog": "6.0.0",
    "esbuild": "0.21.5",
    "fast-glob": "3.3.2",
    "fs-extra": "11.2.0",
    "hookable": "5.5.3",
    "mime": "4.0.3",
    "octokit": "4.0.2",
    "radash": "12.1.0",
    "replace-in-file": "7.2.0",
    "std-env": "3.7.0",
    "update-notifier": "7.0.0",
    "web-ext": "7.12.0"
  },
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "4.3.0",
    "@types/conventional-changelog": "3.1.5",
    "@types/fs-extra": "11.0.4",
    "@types/node": "20.14.5",
    "@types/update-notifier": "6.0.8",
    "eslint": "9.5.0",
    "prettier": "3.3.2",
    "typescript": "5.4.5",
    "typescript-eslint": "8.0.0-alpha.30",
    "unbuild": "2.0.0"
  },
  "pnpm": {
    "peerDependencyRules": {
      "allowAny": [
        "node-fetch"
      ]
    }
  }
}
